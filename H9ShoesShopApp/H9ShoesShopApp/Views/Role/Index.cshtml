@model List<Role>
@{
    ViewBag.Title = "Quản lý quyền truy cập";

}
<div class="card-header row py-3">
    <div>
        <h3 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h3>
    </div>
    <div class="ml-auto" style="padding-right:30px">
        <a asp-controller="Role" asp-action="Create" class="btn btn-warning" style="width:150px">Tạo mới</a>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead style="text-align:center" class="thead-dark">
                    <tr>
                        <td>ID</td>
                        <td>Tên quyền</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody style="text-align:center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleId</td>
                            <td>@item.RoleName</td>
                            <td>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@($"exampleModalLong{@item.RoleId}")">
                                    Xóa
                                </button>
                                <a type="button" class="btn btn-primary" asp-controller="Role" asp-action="Edit" asp-route-id="@item.RoleId">
                                    Cập nhật
                                </a>
                                <div class="modal fade" id="@($"exampleModalLong{@item.RoleId}")" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Xóa quyền này?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn chắc chứ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                <a type="button" class="btn btn-primary" asp-controller="Role" asp-action="Delete" asp-route-id="@item.RoleId">Xóa</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').dataTable();
        });
    </script>
}
